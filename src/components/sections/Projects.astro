---
import ProjectCard from "../ui/ProjectCard.astro";
import { projectsData } from "../../data/projects";
---

<section id="projects" class="max-w-screen-xl mx-auto px-6 py-32">
    <div
        class="flex flex-col sm:flex-row sm:items-end justify-between mb-12 gap-4"
        data-reveal="fade-up"
    >
        <div>
            <h2 class="text-3xl text-white font-medium tracking-tight mb-2">
                Proyectos Seleccionados
            </h2>
            <p class="text-slate-500 font-light">
                Casos de estudio donde el dise√±o encuentra la funcionalidad.
            </p>
        </div>
        <a
            href="#"
            class="text-sm text-indigo-400 hover:text-indigo-300 flex items-center gap-1 transition-colors"
        >
            Ver todos <iconify-icon icon="solar:arrow-right-linear"
            ></iconify-icon>
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8" data-reveal="stagger">
        {
            projectsData.map((project, index) => (
                <ProjectCard
                    project={project}
                    className={index % 2 !== 0 ? "md:mt-16" : ""}
                />
            ))
        }
    </div>
</section>
