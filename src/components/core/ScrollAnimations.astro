<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    function initAnimations() {
        // Selector for simple reveal elements
        const reveals = document.querySelectorAll("[data-reveal='fade-up']");

        reveals.forEach((element) => {
            gsap.fromTo(
                element,
                { opacity: 0, y: 50 },
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    ease: "power3.out",
                    scrollTrigger: {
                        trigger: element,
                        start: "top 85%",
                        toggleActions: "play none none reverse",
                    },
                },
            );
        });

        // Selector for stagger containers
        const staggers = document.querySelectorAll("[data-reveal='stagger']");

        staggers.forEach((container) => {
            // Get immediate children or specific targets if defined
            const children = container.children;

            gsap.fromTo(
                children,
                { opacity: 0, y: 30 },
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.8,
                    ease: "power3.out",
                    stagger: 0.1,
                    scrollTrigger: {
                        trigger: container,
                        start: "top 80%",
                        toggleActions: "play none none reverse",
                    },
                },
            );
        });
    }

    // Run on load
    initAnimations();

    // Re-run on View Transitions (if enabled later)
    document.addEventListener("astro:page-load", initAnimations);
</script>
