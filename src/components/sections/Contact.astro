                <form class="flex flex-col gap-5" id="contact-form">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                        <div class="flex flex-col gap-2">
                            <label
                                for="name"
                                class="text-sm font-medium text-secondary ml-1"
                                >Nombre</label
                            >
                            <input
                                type="text"
                                id="name"
                                placeholder="Tu nombre"
                                class="w-full bg-surface border border-white/5 rounded-xl px-4 py-3.5 text-sm text-primary placeholder:text-muted outline-none focus:border-white/20 focus:bg-surface-hover transition-all shadow-sm"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label
                                for="email"
                                class="text-sm font-medium text-secondary ml-1"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                placeholder="tu@email.com"
                                class="w-full bg-surface border border-white/5 rounded-xl px-4 py-3.5 text-sm text-primary placeholder:text-muted outline-none focus:border-white/20 focus:bg-surface-hover transition-all shadow-sm"
                            />
